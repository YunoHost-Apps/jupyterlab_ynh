{
    "name": "JupyterLab",
    "id": "jupyterlab",
    "packaging_format": 1,
    "description": {
        "en": "Code console environment for running Python code interactively.",
        "fr": "Console de code pour exécuter du code Python de manière interactive."
    },
    "version": "3.0.16~ynh1",
    "url": "https://jupyterlab.readthedocs.io/en/stable/",
    "license": "BSD-3-Clause",
    "maintainer": {
        "name": "kay0u",
        "email": "pierre@kayou.io"
    },
    "requirements": {
        "yunohost": ">= 4.2.4"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install": [
            {
                "name": "domain",
                "type": "domain",
                "example": "example.com"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/jupyterlab",
                "default": "/jupyterlab"
            },
            {
                "name": "admin",
                "type": "user",
                "example": "johndoe"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true
            },
            {
                "name": "enable_terminal",
                "type": "boolean",
                "ask": {
                    "en": "Enable terminal in the lab?",
                    "fr": "Activer le terminal dans le lab ?"
                },
                "default": true
            },
            {
                "name": "enable_extensions",
                "type": "boolean",
                "ask": {
                    "en": "Allow users to install extensions?",
                    "fr": "Permettre aux utilisateurs d'installer des extensions ?"
                },
                "default": true
            }
        ]
    }
}
